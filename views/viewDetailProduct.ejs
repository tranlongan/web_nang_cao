<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/mdbootstrap/css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="/mdbootstrap/css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="/mdbootstrap/css/style.css">
</head>
<body>
<div class="container-fluid">
    <div>
        <% result3.map((row3)=>{ %>
            <a class="navbar-brand" href="/viewAllProduct">Quay lại</a>

            <div class="h2-responsive mb-5">Sửa sản phẩm</div>

            <!--                    form thêm sản phẩm -->
            <!--                        ảnh-->
            <div class="row mb-3">
                <div class="col-5">
                    <div class="mt-4">
                        Cập nhật hình ảnh<span style="color: red"> *</span>
                    </div>
                </div>
                <div class="col-7">
                    <input type="file" id="myFile" name="myFile">
                    <span><img style="width: 80px; height: 70px" src="<%= row3.link_image %>"></span>
                </div>
            </div>
            <!--                        tên sp-->
            <div class="row mb-3">
                <div class="col-5">
                    <div>
                        Tên sản phẩm<span style="color: red"> *</span>
                    </div>
                </div>
                <div class="col-7">
                    <input type="text" id="name_product" name="name_product" class="form-control"
                           value="<%= row3.name_product %>" required="required">
                </div>
            </div>
            <!--                        giá sp-->
            <div class="row mb-3">
                <div class="col-5">
                    <div>
                        Giá sản phẩm<span style="color: red"> *</span>
                    </div>
                </div>
                <div class="col-7">
                    <input type="text" id="cost_product" name="cost_product" class="form-control"
                           value="<%= row3.cost %>" required="required">
                </div>
            </div>
        <% }) %>
        <!--                        danh mục sp-->
        <div class="row mb-3">
            <div class="col-5">
                <div>
                    Danh mục sản phẩm
                </div>
            </div>
            <div class="col-7">
                <select id="select_category1" name="select_category1" class="browser-default custom-select">
                    <% result1.map((row)=>{ %>
                        <option value="" selected><%= row.name_category %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <button type="button" class="btn btn-outline-brown">Sửa</button>
    </div>
    <!--*********************-->
</div>

<!-- jQuery -->
<script type="text/javascript" src="/mdbootstrap/js/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="/mdbootstrap/js/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="/mdbootstrap/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="/mdbootstrap/js/mdb.min.js"></script>
<!--ckeditor-->
<script src="https://cdn.ckeditor.com/ckeditor5/20.0.0/classic/ckeditor.js"></script>

</body>
</html>